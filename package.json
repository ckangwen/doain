{
  "name": "doain-root",
  "private": true,
  "scripts": {
    "dev": "run-s dev:*",
    "dev:node": "pnpm --filter=@doain/node run dev",
    "dev:client": "pnpm --filter=@doain/client run dev",
    "dev:play": "pnpm --filter=playground run dev",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "prettier": "prettier --write ./packages/**/*.{js,ts,tsx,css,scss,vue}"
  },
  "devDependencies": {
    "@charrue/eslint-config-typescript": "latest",
    "@charrue/eslint-config-vue3": "latest",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^17.0.25",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "postcss-sorting": "^6.0.0",
    "prettier": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^4.8.3",
    "vitest": "^0.26.3"
  }
}